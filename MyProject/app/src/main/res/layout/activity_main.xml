<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.MainActivity">

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/MinHeight"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <RadioButton
            android:id="@+id/rb_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            style="@style/TextMedium"
            android:checked="true"
            android:textColor="@color/radio_tab_text"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/rb_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            style="@style/TextMedium"
            android:textColor="@color/radio_tab_text"
            android:text="视频"/>
        <RadioButton
            android:id="@+id/rb_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            style="@style/TextMedium"
            android:textColor="@color/radio_tab_text"
            android:text="关注"/>
        <RadioButton
            android:id="@+id/rb_tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            style="@style/TextMedium"
            android:textColor="@color/radio_tab_text"
            android:text="我的"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fly_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/radio">
    </FrameLayout>
</RelativeLayout>
